@model EstacionamientoMVC.Models.vehiculo

@{
    ViewBag.Title = "Agregar auto";
    Layout = "../EstacionamientoLayout.cshtml"; 
}

<h2>Agregar vehiculo</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>vehiculo</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.patente)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.patente)
            @Html.ValidationMessageFor(model => model.patente)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.idTipo, "tipoDeVehiculo")
        </div>
        <div class="editor-field">
            @Html.DropDownList("idTipo", String.Empty)
            @Html.ValidationMessageFor(model => model.idTipo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.marca)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.marca)
            @Html.ValidationMessageFor(model => model.marca)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver al indice", "Index")
</div>
