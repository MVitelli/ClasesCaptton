@model IEnumerable<EstacionamientoMVC.Models.tipoDeVehiculo>

@{
    ViewBag.Title = "Index";
    Layout = "../EstacionamientoLayout.cshtml"; 
}

<h2>Tarifas por tipo</h2>

<table class="table table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idTipo)
        </th>
        <th>
            Tipo de vehiculo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tarifa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idTipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tarifa)
            </td>
            <td>
                @Html.ActionLink("Modificar tarifa", "Edit", new { id=item.idTipo }) 
            </td>
        </tr>
    }

</table>
