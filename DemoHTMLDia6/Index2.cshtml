@{
    Page.Title = "Personas";
    Layout = "Layout.cshtml";

    Persona per1 = new Persona("Mario");
    Persona per2 = new Persona("Luigi");
    Persona per3 = new Persona("Peach");
    Persona per4 = new Persona("Waluigi");

    //UTILIZO LA PROPIEDAD COMO UN SET
    per1.Nombre = "Bowser";

    List<Persona> listita = new List<Persona>();
    listita.Add(per1);
    listita.Add(per2);
    listita.Add(per3);
    listita.Add(per4);    
}


<div>
    <table class="MaxisClass">
        <tr>
            <th>Indice</th>
            <th>Nombre</th>
            <!-- th: table head tr: filas td: columnas-->
        </tr>
        @foreach (Persona item in listita)
        {
            <tr>
                <td>@listita.IndexOf(item)</td>
                <!-- UTILIZANDO LA PROPIEDAD COMO UN GET -->
                <td id="OtraDiv">@item.Nombre</td>
            </tr>
		 
        }
    </table>
</div>

