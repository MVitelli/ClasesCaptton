@model DemoMVC.Models.Libro

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<fieldset>
    <legend>Libro</legend>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.ISBN)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ISBN)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.titulo)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.titulo)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Autor)
    </div>
    @foreach (var item in Model.Autor)
    {
        <div class="display-field">
            @Html.DisplayFor(i => item.nombre)
        </div>
    }


    <div class="display-label">
        @Html.DisplayNameFor(model => model.Genero)
    </div>


    @foreach (var item in Model.Genero)
    {
        <div class="display-field">
            @Html.DisplayFor(i => item.nombre)
        </div>
    }


    <div class="display-label">
        @Html.DisplayNameFor(model => model.fechaDeEdicion)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.fechaDeEdicion)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.Editorial.nombre)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Editorial.nombre)
    </div>

    <div class="display-label">
        @Html.DisplayNameFor(model => model.cantidadPaginas)
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.cantidadPaginas)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ISBN }) |
    @Html.ActionLink("Back to List", "Index")
</p>
