@model TF_Base.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "../_LayoutLogin.cshtml";
    }

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
       
     <fieldset>
        <legend>Login</legend>

        <div class="editor-label">
            @Html.LabelFor(f => f.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(f => f.UserName, "Login", new { @class = "form-control", @placeholder = "e.g. Un usuario", style = "width: 400px" })
            @Html.ValidationMessageFor(f => f.UserName,null, new {@class="text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(f => f.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(f => f.Password, new { @class = "form-control", @placeholder = "123456", style = "width: 400px" })
            @Html.ValidationMessageFor(f => f.Password,null, new {@class="text-danger" })
        </div>

        <div class="editor-label">
            @Html.LabelFor(f => f.RememberMe)
        </div>
        <div class="editor-field">
            @Html.EditorFor(f => f.RememberMe)
            @Html.ValidationMessageFor(f => f.RememberMe)
        </div>

        <input class="btn btn-primary" type="submit" value="Ingresar" />
    </fieldset>
      
}
