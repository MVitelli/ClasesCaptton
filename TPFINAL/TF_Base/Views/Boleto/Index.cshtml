@model IEnumerable<TF_Base.Models.Boletos>

@{
    ViewBag.Title = "Index";
    Layout = "../_LayoutEmpleado.cshtml";
}

<h2>Boletos</h2>

<p>
    @Html.ActionLink("Agregar Boleto", "Create", null, new { @class="btn btn-default"})
</p>
<table class="table table-bordered">
    <tr>
        <th>Informacion boleto
        </th>
        <th>Numero de vuelo</th>
        <th>ID Boleto
        </th>
        <th>DNI Cliente
        </th>
        <th>Estado boleto
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.infoBoleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numeroVuelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idBoleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.nombreEstado)
            </td>
            <td>
                @if (item.idEstado == 1) //Pregunto si es diferente de cancelado
                {
                    @Html.ActionLink("Confirmar", "Confirmar", new { id = item.idBoleto }, new { @class = "btn btn-success" })<label> </label>   
                    @Html.ActionLink("Cancelar", "Cancelar", new { id = item.idBoleto }, new { @class = "btn btn-danger" })  
                }
                @Html.ActionLink("Detalles", "Details", new { id = item.idBoleto }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>
