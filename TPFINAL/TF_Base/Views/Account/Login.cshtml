@model TF_Base.Models.Login

@{
    ViewBag.Title = "Login";
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
}

<h2>Sistema de vuelos</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Login</legend>

        <div class="editor-label">
            @Html.LabelFor(f => f.UserName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(f => f.UserName)
            @Html.ValidationMessageFor(f => f.UserName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(f => f.Password)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(f => f.Password)
            @Html.ValidationMessageFor(f => f.Password)
        </div>

        <div class="editor-label">
            @Html.LabelFor(f => f.RememberMe)
        </div>
        <div class="editor-field">
            @Html.EditorFor(f => f.RememberMe)
            @Html.ValidationMessageFor(f => f.RememberMe)
        </div>

        <input type="submit" value="Ingresar" />
    </fieldset>
}
<br />
<a class="btn btn-default" href="../Account/Register">Registrarse</a>