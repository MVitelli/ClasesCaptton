@model TF_Base.Models.Vuelos

@{
    ViewBag.Title = "Create";
    Layout = "../_LayoutEmpleado.cshtml";
}

<h2>Agregar Vuelo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Vuelos</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.AerolineaID, "Conexiones")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ConexionID", String.Empty)
            @Html.ValidationMessageFor(model => model.ConexionID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fecha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fecha)
            @Html.ValidationMessageFor(model => model.fecha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.capacidad)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.capacidad)
            @Html.ValidationMessageFor(model => model.capacidad)
        </div>

        <p>
            <input type="submit" value="Agregar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

