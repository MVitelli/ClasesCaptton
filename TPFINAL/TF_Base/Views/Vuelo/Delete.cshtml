@model TF_Base.Models.Vuelos

@{
    ViewBag.Title = "Delete";
}
@if (ViewBag.error)
{
    <script>alert("No se puede eliminar el vuelo");</script>
}
<h2>Eliminar vuelo</h2>

<h3>¿Está seguro de eliminar este vuelo?</h3>
<fieldset>
    <legend>Vuelos</legend>

    <div class="display-label">
        <strong>Informacion del vuelo</strong>
    </div>
    <div class="display-field">
        @Html.DisplayFor(model => model.infoVuelo)
    </div>

    <div class="display-label">
        <strong>Cantidad de personas con reserva en el vuelo</strong>
    </div>
    <div class="display-field">
        @Session["ocupados"]
    </div>

</fieldset>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <p>
        <input type="submit" value="Eliminar" />
        |
        @Html.ActionLink("Volver a la lista", "Index")
    </p>
}
